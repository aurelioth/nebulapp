<p id="notice"><%= notice %></p>

<h1>Facturas</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Creada</th>
      <th>Vence</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td>$<%= invoice.total %></td>
        <td><%= invoice.created.to_formatted_s(:short) %></td>
        <td><%= invoice.exp_date.to_formatted_s(:short) %></td>
        <td><%= link_to 'Pagar', new_payment_path(:invoice_id=>invoice) %></td>
        <td><%= link_to 'Ver', invoice %></td>
        <td><%= link_to 'Editar', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Borrar', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

